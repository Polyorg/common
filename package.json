{
  "name": "@polyorg/poly-lib",
  "version": "1.0.0",
  "description": "Common Poly lib",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "create:pkg": "plop component",
    "test": "jest",
    "lint": "eslint packages/**/src --ext .ts,.tsx --config .eslintrc --cache",
    "format:check": "prettier --check packages/**/src --cache",
    "format:write": "prettier --write packages/**/src --cache",
    "release": "changeset release",
    "publish": "changeset publish",
    "release:dev": "changeset release --snapshot dev",
    "publish:dev": "changeset publish --tag dev",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Polyorg/poly-lib.git"
  },
  "keywords": [
    "common",
    "lib",
    "poly",
    "nest",
    "react"
  ],
  "author": "Nitin Panwar <nitinpanwar0802@outlook.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Polyorg/poly-lib/issues"
  },
  "homepage": "https://github.com/Polyorg/poly-lib#readme",
  "engines": {
    "node": "18.3.0"
  },
  "packageManager": "pnpm@7.11.0",
  "devDependencies": {
    "husky": "^8.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "@swc-node/jest": "^1.5.5",
    "@swc/core": "^1.3.24",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  }
}
